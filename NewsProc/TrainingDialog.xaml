<Window x:Class="NewsAnalyzer.TrainingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewsAnalyzer"
        mc:Ignorable="d"
        Title="TrainingDialog" Height="140" Width="480">
    <Grid>
        <Label Content="Training in progress..." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Name="lblDisp" Content="Epochs done: 0, Time elapsed: 0:00" HorizontalAlignment="Left" Margin="10,68,0,0" Height="26" VerticalAlignment="Top"/>
        <Button Click="Button_Click" Content="Stop" Margin="0,74,22,0" HorizontalAlignment="Right" Width="28" Height="20" VerticalAlignment="Top"/>
        <ProgressBar x:Name="progressBar" Margin="22,47,22,0" Height="16" VerticalAlignment="Top"/>

    </Grid>
</Window>
